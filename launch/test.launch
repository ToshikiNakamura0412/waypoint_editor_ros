<?xml version="1.0"?>
<launch>
    <arg name="waypoint_file" default="$(find waypoint_editor_ros)/launch/waypoints.yaml"/>

    <include file="$(find waypoint_editor_ros)/launch/waypoint_editor.launch">
        <arg name="output" value="screen"/>
        <arg name="waypoint_file" value="$(arg waypoint_file)"/>
    </include>

    <include file="$(find waypoint_manager_ros)/launch/waypoint_manager.launch">
        <arg name="waypoint_file" value="$(arg waypoint_file)"/>
        <arg name="width_ratio" value="0.3"/>
    </include>
    <node pkg="map_server" type="map_server" name="map_server" args="$(find waypoint_manager_ros)/maps/map.yaml"/>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find waypoint_editor_ros)/launch/rviz.rviz"/>
</launch>
